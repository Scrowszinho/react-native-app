{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@api/*": ["src/libs/api/*"],
      "@styles/*": ["src/libs/styles/*"],
      "@components/*": ["src/libs/components/*"],
      "@providers/*": ["src/libs/providers/*"],
      "@enums/*": ["src/libs/enums/*"],
      "@types/*": ["src/libs/types/*.ts"],
      "@screens/*": ["src/app/screens/*"],
      "@navigations/*": ["src/app/navigations/*"],
      "@hooks/*": ["src/libs/hooks/*"]
    }
  }
}
